int pushButton=2;

void setup() {
  // put your setup code here, to run once:
  Serial.begin(9600);
  pinMode(13, OUTPUT);
  pinMode(pushButton,INPUT);
}

void loop() {
 
int buttonState=digitalRead(pushButton);
Serial.println(buttonState);
delay(1);

if(buttonState==0)
{
  for(int i=0;i<3;i++)
  {
    digitalWrite(13,HIGH);
 delay(1000);
 digitalWrite(13,LOW);
 delay(1000);
  }  
}
 
}
